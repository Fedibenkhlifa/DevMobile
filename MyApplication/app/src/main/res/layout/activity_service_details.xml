<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section pour les informations de l'utilisateur -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageViewUser"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/textViewUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom de l'utilisateur"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light"
                android:layout_marginBottom="12dp" />

            <!-- Section pour les informations du service -->
            <ImageView
                android:id="@+id/imageViewService"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp" />

            <!-- Nom du service -->
            <TextView
                android:id="@+id/textViewServiceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom du Service"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- Description du service -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewServiceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Description"
                android:textSize="15sp"
                android:textColor="@color/gray_dark"
                android:layout_marginBottom="12dp" />

            <!-- Catégorie du service -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catégorie"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewServiceCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Category"
                android:textSize="15sp"
                android:textColor="@color/gray_dark"
                android:layout_marginBottom="12dp" />

            <!-- Prix du service -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewServicePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Price"
                android:textSize="15sp"
                android:textColor="@color/primaryColor"
                android:layout_marginBottom="16dp" />

            <!-- Date de réservation et bouton de réservation -->
            <TextView
                android:id="@+id/textViewReservationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Reservation Date"
                android:textSize="16sp"
                android:textColor="@color/gray_dark"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="8dp" />

            <Button
                android:id="@+id/buttonReserveService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Réserver le service"
                android:backgroundTint="#333333"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
