<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Service Name -->
        <TextView
            android:id="@+id/textViewServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du service"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Service Description -->
        <TextView
            android:id="@+id/textViewServiceDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description du service"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Service Price -->
        <TextView
            android:id="@+id/textViewServicePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix: $0.00"
            android:textSize="14sp"
            android:textColor="@color/primaryColor"
            android:layout_marginTop="4dp" />

        <!-- Buttons: Details, Edit, and Delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/buttonServiceDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="100dp"
                android:paddingHorizontal="8dp"
                android:text="DÃ©tails" />

            <Button
                android:id="@+id/buttonEditService"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="100dp"
                android:paddingHorizontal="8dp"
                android:text="Modifier" />

            <Button
                android:id="@+id/buttonDeleteService"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="100dp"
                android:paddingHorizontal="8dp"
                android:text="Supprimer" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
