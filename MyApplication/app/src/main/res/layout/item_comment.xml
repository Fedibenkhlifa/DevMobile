<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/comment_background"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imageViewRater"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewRaterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de l'Ã©valuateur"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commentaire"
            android:textSize="12sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Edit and Delete Icons -->
    <ImageView
        android:id="@+id/iconEditComment"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Edit Comment"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iconDeleteComment"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_delete"
        android:contentDescription="Delete Comment"
        android:visibility="gone" />
</LinearLayout>
